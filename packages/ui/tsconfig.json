{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "lib": ["es2015", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@ui": ["./components"],
      "@ui/*": ["./components/*"],
      "@styles": ["./styles"],
      "@styles/*": ["./styles/*"]
    }
  },
  "exclude": ["storybook-static", "icon-index-template.js", "icon-template.js"],
  "include": [
    ".eslintrc.js",
    "assets/**/*",
    "icons/**/*",
    "components/**/*",
    "styles/**/*",
    "utils/**/*"
  ]
}
